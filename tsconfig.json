{
  "compilerOptions": {
    "target": "ES2021",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "baseUrl": "./src", // base for alias
    "paths": {
      "@*": [
        "*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ]
  },
  "include": [
    "src",
    "src/@types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".env"
  ],
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  }
}